{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "strict": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src", "scripts", "./setupTests.ts", ".storybook/preview.ts"],
  "exclude": ["src/index.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "json": "docs/docs.json",
    "pretty": true
  }
}
