{
  "plugins": ["react", "babel"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": 2,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/forbid-prop-types": [0, { "forbid": [] }],
    "curly": [2, "all"],
    "operator-linebreak": [2, "after"],
    "camelcase": [
      2,
      {
        "properties": "never"
      }
    ],
    "no-multi-str": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "space-unary-ops": [
      2,
      {
        "nonwords": false,
        "overrides": {}
      }
    ],
    "keyword-spacing": [2, {}],
    "space-infix-ops": 2,
    "space-before-blocks": [2, "always"],
    "eol-last": 2,
    "space-in-parens": [2, "never"],
    "no-multiple-empty-lines": 2
  },
  "globals": {
    "window": true,
    "document": true,
    "alert": true
  }
}
